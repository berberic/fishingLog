<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".FishlogListActivity">


    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/spring"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Spring" />

        <RadioButton
            android:id="@+id/summer"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Summer" />

        <RadioButton
            android:id="@+id/fall"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Fall" />

        <RadioButton
            android:id="@+id/winter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Winter" />
        <!--    <RadioButton
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"/>
        -->

        <RadioButton
            android:id="@+id/title_loc"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Loc" />
    </RadioGroup>



    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fishlog_recycler_view"
        android:hint="Select 'Create NEW Log Entry' from upper right Menu to create first Log Entry"
        android:contentDescription="Log Data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/radioGroup2"
        android:background="@color/palegreen">

    </android.support.v7.widget.RecyclerView>
    <!--
    The following is only used when there is no data in the Database
-->

    <LinearLayout
        android:id="@+id/add_crime_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="There are no Fly-Fish Logs yet. Do you have anything to report?"
            android:textSize="20dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/add_crime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Add New Log"
            android:textAlignment="center"
            android:textStyle="bold"
            android:elegantTextHeight="true"
            android:theme="@style/Base.AlertDialog.AppCompat.Light"/>
    </LinearLayout>



</RelativeLayout>