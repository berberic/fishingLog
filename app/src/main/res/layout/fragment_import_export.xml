<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="@color/yellow"
    >


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="@dimen/font_size"
        android:gravity="center"
        android:text="Export/Import and using Encryption"
        android:textAppearance="@style/TextAppearance.AppCompat" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="241dp">

        <EditText
            android:id="@+id/key"
            android:layout_width="169dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:hint="Encryption Key"
            android:windowSoftInputMode="stateHidden"
            app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/exportDb"
            android:layout_width="162dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/button_states"
            android:text="@string/send_Db_report"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_bias="0.925"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/key" />

        <Button
            android:id="@+id/exportDb1"
            android:layout_width="166dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/button_states"
            android:text="@string/select_send_Db_report"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_bias="0.038"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/key" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="145dp"
            android:layout_height="110dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="144dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/importDb"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/overwrite"
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:text="Overwrite" />

            <RadioButton
                android:id="@+id/append"
                android:layout_width="117dp"
                android:layout_height="48dp"
                android:text="Append" />

        </RadioGroup>

        <Button
            android:id="@+id/importDb"
            android:layout_width="157dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"

            android:layout_marginRight="8dp"
            android:layout_marginTop="152dp"
            android:background="@drawable/button_states"
            android:text="IMPORT CSV"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_bias="0.037"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--    <Button
            android:id="@+id/delete"
            android:layout_width="124dp"
            android:layout_height="52dp"
            android:text="View and\nDelete files"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:background = "@drawable/button_states"
            -->
        />

    </android.support.constraint.ConstraintLayout>




    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical">


        <TextView
            android:id="@+id/TEXT_STATUS_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="20dp"
            android:text="@string/importexport"
            android:textAppearance="@style/TextAppearance.AppCompat" />


    </ScrollView>



</LinearLayout>